$dia_actual = $dias_semana[$fecha_actual->format('w')];

// Limpiar fotos antiguas periÃ³dicamente (una vez al dÃ­a)
if ($fecha_actual->format('H') == '03') {
    limpiar_fotos_antiguas();
}

// FUNCIONES AUXILIARES QUE FALTABAN
function obtener_alertas_activas($empleado_id) {
    global $pdo;
    
    try {
        $stmt = $pdo->prepare("
            SELECT a.*, u.nombre as empleado_nombre 
            FROM alertas_montacarga a 
            JOIN usuarios u ON a.empleado_id = u.id 
            WHERE a.empleado_id = ? AND a.activa = TRUE AND a.completada = FALSE
            ORDER BY a.fecha_asignacion DESC 
            LIMIT 1
        ");
        $stmt->execute([$empleado_id]);
        return $stmt->fetch();
    } catch(Exception $e) {
        error_log("Error obteniendo alertas: " . $e->getMessage());
        return null;
    }
}

function eliminar_foto_tarea($ruta_foto) {
    if (!empty($ruta_foto) && file_exists($ruta_foto)) {
        try {
            unlink($ruta_foto);
            return true;
        } catch (Exception $e) {
            error_log("Error eliminando foto: " . $e->getMessage());
            return false;
        }
    }
    return true;
}

function limpiar_fotos_antiguas() {
    $upload_dir = '/var/www/uploads/tareas/';
    
    if (!is_dir($upload_dir)) return;
    
    $limite_tiempo = strtotime('-30 days');
    $archivos = glob($upload_dir . "*.{jpg,jpeg,png}", GLOB_BRACE);
    
    foreach ($archivos as $archivo) {
        if (filemtime($archivo) < $limite_tiempo) {
            unlink($archivo);
        }
    }
}
