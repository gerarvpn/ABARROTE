# Crear script para tareas automÃ¡ticas MEJORADO - MONTACARGA
cat > tareas_automaticas.php << 'EOF'
<?php
require_once 'config.php';

// Obtener configuraciones
$stmt = $pdo->query("SELECT clave, valor FROM configuraciones");
$configs = $stmt->fetchAll(PDO::FETCH_KEY_PAIR);

// Verificar si las tareas automÃ¡ticas estÃ¡n activadas
if (($configs['tareas_automaticas'] ?? '1') == '1') {
    $fecha_actual = obtenerFechaHoraActual();
    $turno_actual = $fecha_actual->format('H') < 12 ? 'AM' : 'PM';
    $hora_tarea = $turno_actual === 'AM' ? ($configs['hora_montacarga_am'] ?? '08:00') : ($configs['hora_montacarga_pm'] ?? '14:00');
    
    try {
        // Verificar si ya se asignaron alertas hoy para este turno
        $fecha_hoy = $fecha_actual->format('Y-m-d');
        $stmt_check = $pdo->prepare("
            SELECT COUNT(*) as count 
            FROM alertas_montacarga 
            WHERE turno = ? 
            AND DATE(fecha_asignacion) = ? 
            AND activa = TRUE
        ");
        $stmt_check->execute([$turno_actual, $fecha_hoy]);
        $result = $stmt_check->fetch();
        
        if ($result['count'] == 0) {
            // Asignar alertas automÃ¡ticas de montacarga
            $resultado = asignar_alertas_montacarga($turno_actual, $hora_tarea);
            
            if ($resultado['success']) {
                error_log("Alertas automÃ¡ticas de montacarga asignadas para el turno " . $turno_actual . 
                         ". Empleados en montacarga: " . count($resultado['empleados_montacarga']) . 
                         ", Empleados en almacÃ©n: " . count($resultado['empleados_almacen']));
            } else {
                error_log("Error en alertas automÃ¡ticas: " . $resultado['error']);
            }
        } else {
            error_log("Alertas de montacarga ya asignadas hoy para el turno " . $turno_actual);
        }
    } catch(Exception $e) {
        error_log("Error en tareas automÃ¡ticas: " . $e->getMessage());
    }
}

// ACTUALIZAR TAREAS VENCIDAS - CORRECCIÃ“N DEFINITIVA
$tareas_vencidas = actualizar_tareas_vencidas();
if ($tareas_vencidas > 0) {
    error_log("Tareas vencidas actualizadas: " . $tareas_vencidas);
}
?>
EOF

# Crear script para backup automÃ¡tico MEJORADO CON TELEGRAM
cat > backup_automatico.php << 'EOF'
<?php
require_once 'config.php';

try {
    // Verificar si el backup automÃ¡tico estÃ¡ activado
    $stmt = $pdo->query("SELECT clave, valor FROM configuraciones WHERE clave IN ('backup_automatico', 'enviar_backup_telegram')");
    $configs = $stmt->fetchAll(PDO::FETCH_KEY_PAIR);
    
    if (($configs['backup_automatico'] ?? '1') == '1') {
        // Generar backup automÃ¡tico
        $resultado = generar_backup(1); // Usuario ID 1 (admin)
        
        if ($resultado['success']) {
            error_log("Backup automÃ¡tico generado: " . $resultado['nombre']);
            
            // Verificar si se debe enviar por Telegram
            $enviar_telegram = ($configs['enviar_backup_telegram'] ?? '1') == '1';
            
            if ($enviar_telegram) {
                // El envÃ­o por Telegram ya se maneja dentro de la funciÃ³n generar_backup()
                error_log("Backup enviado por Telegram automÃ¡ticamente");
            }
        } else {
            error_log("Error en backup automÃ¡tico: " . $resultado['error']);
        }
    }
} catch(Exception $e) {
    error_log("Error en backup automÃ¡tico: " . $e->getMessage());
}
?>
