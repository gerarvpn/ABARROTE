if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    if (isset($_SESSION['last_post_time']) && (time() - $_SESSION['last_post_time']) < 2) {
        // Redirigir sin procesar el formulario nuevamente
        header('Location: ' . $_SERVER['REQUEST_URI']);
        exit;
