# Crear script para tareas autom√°ticas MEJORADO - CON VERIFICACI√ìN DE VENCIMIENTO
cat > tareas_automaticas.php << 'EOF'
<?php
require_once 'config.php';

// CORRECCI√ìN: Primero actualizar tareas vencidas
$tareas_vencidas_actualizadas = actualizar_tareas_vencidas();

if ($tareas_vencidas_actualizadas > 0) {
    error_log("Tareas autom√°ticas: Se actualizaron " . $tareas_vencidas_actualizadas . " tareas a estado 'vencida'");
}

// Obtener configuraciones
$stmt = $pdo->query("SELECT clave, valor FROM configuraciones");
$configs = $stmt->fetchAll(PDO::FETCH_KEY_PAIR);

// Verificar si las tareas autom√°ticas est√°n activadas
if (($configs['tareas_automaticas'] ?? '1') == '1') {
    $fecha_actual = obtenerFechaHoraActual();
    $hora_actual = $fecha_actual->format('H:i');
    $turno_actual = $fecha_actual->format('H') < 12 ? 'AM' : 'PM';
    
    // Horarios de montacarga
    $hora_montacarga_am = $configs['hora_montacarga_am'] ?? '08:00';
    $hora_montacarga_pm = $configs['hora_montacarga_pm'] ?? '14:00';
    
    // Verificar si es hora de asignar montacarga AM
    if ($turno_actual === 'AM' && $hora_actual >= $hora_montacarga_am && $hora_actual <= date('H:i', strtotime($hora_montacarga_am . ' +5 minutes'))) {
        try {
            // Verificar si ya se asignaron alertas hoy para este turno
            $fecha_hoy = $fecha_actual->format('Y-m-d');
            $stmt_check = $pdo->prepare("
                SELECT COUNT(*) as count 
                FROM alertas_montacarga 
                WHERE turno = ? 
                AND DATE(fecha_asignacion) = ? 
                AND activa = TRUE
            ");
            $stmt_check->execute(['AM', $fecha_hoy]);
            $result = $stmt_check->fetch();
            
            if ($result['count'] == 0) {
                // Asignar alertas autom√°ticas de montacarga AM
                $resultado = asignar_alertas_montacarga('AM', $hora_montacarga_am);
                
                if ($resultado['success']) {
                    error_log("Alertas autom√°ticas de montacarga AM asignadas. Empleados en montacarga: " . 
                             count($resultado['empleados_montacarga']) . ", Empleados en almac√©n: " . 
                             count($resultado['empleados_almacen']));
                } else {
                    error_log("Error en alertas autom√°ticas AM: " . $resultado['error']);
                }
            }
        } catch(Exception $e) {
            error_log("Error en tareas autom√°ticas AM: " . $e->getMessage());
        }
    }
    
    // Verificar si es hora de asignar montacarga PM
    if ($turno_actual === 'PM' && $hora_actual >= $hora_montacarga_pm && $hora_actual <= date('H:i', strtotime($hora_montacarga_pm . ' +5 minutes'))) {
        try {
            // Verificar si ya se asignaron alertas hoy para este turno
            $fecha_hoy = $fecha_actual->format('Y-m-d');
            $stmt_check = $pdo->prepare("
                SELECT COUNT(*) as count 
                FROM alertas_montacarga 
                WHERE turno = ? 
                AND DATE(fecha_asignacion) = ? 
                AND activa = TRUE
            ");
            $stmt_check->execute(['PM', $fecha_hoy]);
            $result = $stmt_check->fetch();
            
            if ($result['count'] == 0) {
                // Asignar alertas autom√°ticas de montacarga PM
                $resultado = asignar_alertas_montacarga('PM', $hora_montacarga_pm);
                
                if ($resultado['success']) {
                    error_log("Alertas autom√°ticas de montacarga PM asignadas. Empleados en montacarga: " . 
                             count($resultado['empleados_montacarga']) . ", Empleados en almac√©n: " . 
                             count($resultado['empleados_almacen']));
                } else {
                    error_log("Error en alertas autom√°ticas PM: " . $resultado['error']);
                }
            }
        } catch(Exception $e) {
            error_log("Error en tareas autom√°ticas PM: " . $e->getMessage());
        }
    }
}
?>
EOF

