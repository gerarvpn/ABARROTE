# Crear script para descargar backup
cat > descargar_backup.php << 'EOF'
<?php
require_once 'config.php';
session_start();

if (!isset($_SESSION['usuario_id']) || !in_array($_SESSION['rol'], ['admin_pro', 'admin'])) {
    header('Content-Type: application/json');
    echo json_encode(['success' => false, 'error' => 'Acceso denegado']);
    exit;
}

$nombre_archivo = $_GET['file'] ?? '';

if (empty($nombre_archivo)) {
    header('Content-Type: application/json');
    echo json_encode(['success' => false, 'error' => 'Archivo no especificado']);
    exit;
}

// Validar que el archivo sea un backup v√°lido
if (!preg_match('/^backup_gestion_\d{4}-\d{2}-\d{2}_\d{2}-\d{2}-\d{2}\.sql$/', $nombre_archivo)) {
    header('Content-Type: application/json');
    echo json_encode(['success' => false, 'error' => 'Archivo no v√°lido']);
    exit;
}

$ruta_backup = "/var/www/backups/" . $nombre_archivo;

if (file_exists($ruta_backup)) {
    // Registrar log de descarga
    registrar_log($_SESSION['usuario_id'], 'BACKUP_DESCARGADO', "Archivo: $nombre_archivo");
    
    // Devolver informaci√≥n para descarga
    header('Content-Type: application/json');
    echo json_encode([
        'success' => true,
        'nombre' => $nombre_archivo,
        'tamano' => filesize($ruta_backup),
        'url_descarga' => "descargar_backup_archivo.php?file=" . urlencode($nombre_archivo)
    ]);
    exit;
} else {
    header('Content-Type: application/json');
    echo json_encode(['success' => false, 'error' => 'Archivo no encontrado']);
    exit;
}
?>
EOF

# Crear script para descarga directa del archivo
cat > descargar_backup_archivo.php << 'EOF'
<?php
require_once 'config.php';
session_start();

if (!isset($_SESSION['usuario_id']) || !in_array($_SESSION['rol'], ['admin_pro', 'admin'])) {
    die('Acceso denegado');
}

$nombre_archivo = $_GET['file'] ?? '';

if (empty($nombre_archivo)) {
    die('Archivo no especificado');
}

// Validar que el archivo sea un backup v√°lido
if (!preg_match('/^backup_gestion_\d{4}-\d{2}-\d{2}_\d{2}-\d{2}-\d{2}\.sql$/', $nombre_archivo)) {
    die('Archivo no v√°lido');
}

$ruta_backup = "/var/www/backups/" . $nombre_archivo;

if (file_exists($ruta_backup)) {
    header('Content-Type: application/octet-stream');
    header('Content-Disposition: attachment; filename="' . $nombre_archivo . '"');
    header('Content-Length: ' . filesize($ruta_backup));
    readfile($ruta_backup);
    exit;
} else {
    die('Archivo no encontrado');
}
?>
EOF

# Crear script para subir backup
cat > subir_backup.php << 'EOF'
<?php
require_once 'config.php';
session_start();

if (!isset($_SESSION['usuario_id']) || !in_array($_SESSION['rol'], ['admin_pro', 'admin'])) {
    die('Acceso denegado');
}

if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_FILES['backup_file'])) {
    $resultado = subir_backup($_FILES['backup_file'], $_SESSION['usuario_id']);
    
    if ($resultado['success']) {
        $_SESSION['mensaje'] = 'Backup subido y restaurado exitosamente';
        $_SESSION['tipo_mensaje'] = 'success';
    } else {
        $_SESSION['mensaje'] = 'Error: ' . $resultado['error'];
        $_SESSION['tipo_mensaje'] = 'error';
    }
}

header('Location: panel.php');
exit;

function subir_backup($file, $usuario_id) {
    global $pdo;
    
    $upload_dir = '/var/www/backups/';
    $allowed_types = ['application/sql', 'text/plain', 'application/octet-stream'];
    
    // Verificar tipo de archivo
    $file_type = mime_content_type($file['tmp_name']);
    if (!in_array($file_type, $allowed_types)) {
        return ['success' => false, 'error' => 'Tipo de archivo no permitido. Solo se permiten archivos SQL.'];
    }
    
    // Verificar extensi√≥n
    $extension = pathinfo($file['name'], PATHINFO_EXTENSION);
    if (strtolower($extension) !== 'sql') {
        return ['success' => false, 'error' => 'Solo se permiten archivos con extensi√≥n .sql'];
    }
    
    // Generar nombre √∫nico
    $fecha_actual = obtenerFechaHoraActual();
    $nombre_archivo = "backup_subido_" . $fecha_actual->format('Y-m-d_H-i-s') . ".sql";
    $ruta_completa = $upload_dir . $nombre_archivo;
    
    if (move_uploaded_file($file['tmp_name'], $ruta_completa)) {
        // RESTAURAR EL BACKUP
        $command = "mysql -h " . DB_HOST . " -u " . DB_USER . " -p'" . DB_PASS . "' " . DB_NAME . " < " . escapeshellarg($ruta_completa) . " 2>/dev/null";
        $output = [];
        $return_var = 0;
        exec($command, $output, $return_var);
        
        if ($return_var === 0) {
            // Registrar en la base de datos
            $tamano = filesize($ruta_completa);
            $stmt = $pdo->prepare("INSERT INTO backups (nombre_archivo, tamano, creado_por, ubicacion) VALUES (?, ?, ?, ?)");
            $stmt->execute([$nombre_archivo, $tamano, $usuario_id, $ruta_completa]);
            
            registrar_log($usuario_id, 'BACKUP_SUBIDO_Y_RESTAURADO', "Backup: $nombre_archivo, Tama√±o: " . round($tamano/1024/1024, 2) . "MB");
            
            return ['success' => true, 'archivo' => $ruta_completa, 'nombre' => $nombre_archivo];
        } else {
            return ['success' => false, 'error' => 'Error al restaurar backup: C√≥digo ' . $return_var];
        }
    } else {
        return ['success' => false, 'error' => 'Error al subir archivo'];
    }
}
?>
EOF

# Crear archivos auxiliares necesarios
cat > obtener_detalles_tarea.php << 'EOF'
<?php
require_once 'config.php';
session_start();

if (!isset($_SESSION['usuario_id']) || !in_array($_SESSION['rol'], ['admin_pro', 'admin'])) {
    exit('Acceso denegado');
}

$tarea_id = $_GET['id'] ?? 0;

try {
    $stmt = $pdo->prepare("
        SELECT t.*, u.nombre as empleado_nombre, u2.nombre as admin_nombre 
        FROM tareas t 
        LEFT JOIN usuarios u ON t.empleado_id = u.id 
        LEFT JOIN usuarios u2 ON t.administrador_id = u2.id 
        WHERE t.id = ?
    ");
    $stmt->execute([$tarea_id]);
    $tarea = $stmt->fetch();
    
    if ($tarea) {
        // Verificar si la tarea est√° vencida
        $vencida = tarea_esta_vencida($tarea['fecha_vencimiento']) && $tarea['estado'] === 'pendiente';
        
        echo '<div class="space-y-4">';
        echo '<h4 class="text-xl font-bold text-white mb-4">' . htmlspecialchars($tarea['titulo']) . '</h4>';
        echo '<div class="grid grid-cols-1 md:grid-cols-2 gap-4">';
        
        echo '<div class="space-y-3">';
        echo '<div><strong class="text-gray-300">Descripci√≥n:</strong><p class="text-white mt-1">' . nl2br(htmlspecialchars($tarea['descripcion'])) . '</p></div>';
        echo '<div><strong class="text-gray-300">Empleado:</strong><p class="text-white">' . htmlspecialchars($tarea['empleado_nombre']) . '</p></div>';
        echo '<div><strong class="text-gray-300">Asignado por:</strong><p class="text-white">' . htmlspecialchars($tarea['admin_nombre']) . '</p></div>';
        echo '</div>';
        
        echo '<div class="space-y-3">';
        echo '<div><strong class="text-gray-300">Fecha asignaci√≥n:</strong><p class="text-white">' . convertirFechaZonaHoraria($tarea['fecha_asignacion'], 'd/m/Y H:i') . '</p></div>';
        
        if ($tarea['fecha_vencimiento']) {
            $estado_vencimiento = $vencida ? '<span class="text-red-400">¬°VENCIDA!</span>' : 'Pendiente';
            echo '<div><strong class="text-gray-300">Vence:</strong><p class="text-white">' . convertirFechaZonaHoraria($tarea['fecha_vencimiento'], 'd/m/Y H:i') . ' - ' . $estado_vencimiento . '</p></div>';
        }
        
        if ($tarea['fecha_completado']) {
            echo '<div><strong class="text-gray-300">Completada:</strong><p class="text-white">' . convertirFechaZonaHoraria($tarea['fecha_completado'], 'd/m/Y H:i') . '</p></div>';
        }
        
        echo '<div><strong class="text-gray-300">Estado:</strong><span class="ml-2 px-2 py-1 rounded-full text-xs ';
        if ($vencida) {
            echo 'bg-red-600 text-white">VENCIDA</span>';
        } else {
            switch($tarea['estado']) {
                case 'pendiente': echo 'bg-yellow-500 text-white'; break;
                case 'completada': echo 'bg-green-500 text-white'; break;
                case 'vencida': echo 'bg-red-500 text-white'; break;
                case 'verificada': echo 'bg-blue-500 text-white'; break;
                default: echo 'bg-gray-500 text-white';
            }
            echo '">' . ucfirst($tarea['estado']) . '</span>';
        }
        echo '</div>';
        
        if ($tarea['calificacion']) {
            echo '<div><strong class="text-gray-300">Calificaci√≥n:</strong><p class="text-yellow-400">' . str_repeat('‚òÖ', $tarea['calificacion']) . '</p></div>';
        }
        
        echo '</div>';
        echo '</div>';
        
        if ($tarea['comentario_revision']) {
            echo '<div class="mt-4"><strong class="text-gray-300">Comentario:</strong><p class="text-white mt-1 bg-gray-800 p-3 rounded-lg">' . nl2br(htmlspecialchars($tarea['comentario_revision'])) . '</p></div>';
        }
        
        // Mostrar todas las fotos de la tarea
        $fotos_tarea = obtener_fotos_tarea($tarea_id);
        if (!empty($fotos_tarea)) {
            echo '<div class="mt-4"><strong class="text-gray-300">Fotos de evidencia:</strong><br>';
            echo '<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-2 mt-2">';
            foreach ($fotos_tarea as $foto) {
                if (file_exists($foto['foto_path'])) {
                    echo '<div class="relative">';
                    echo '<img src="' . $foto['foto_path'] . '" class="w-full h-32 object-cover rounded-lg border-2 border-blue-500 cursor-pointer" onclick="ampliarFoto(this.src)" title="Click para ampliar">';
                    echo '<div class="text-xs text-gray-400 mt-1 truncate">' . htmlspecialchars($foto['foto_nombre']) . '</div>';
                    echo '</div>';
                }
            }
            echo '</div>';
            echo '</div>';
        }
        
        echo '</div>';
    } else {
        echo '<p class="text-red-400">Tarea no encontrada</p>';
    }
} catch(Exception $e) {
    echo '<p class="text-red-400">Error al cargar detalles: ' . htmlspecialchars($e->getMessage()) . '</p>';
}
?>
<script>
function ampliarFoto(src) {
    const modal = document.createElement('div');
    modal.style.position = 'fixed';
    modal.style.top = '0';
    modal.style.left = '0';
    modal.style.width = '100%';
    modal.style.height = '100%';
    modal.style.backgroundColor = 'rgba(0,0,0,0.9)';
    modal.style.zIndex = '9999';
    modal.style.display = 'flex';
    modal.style.alignItems = 'center';
    modal.style.justifyContent = 'center';
    modal.style.cursor = 'zoom-out';
    
    const img = document.createElement('img');
    img.src = src;
    img.style.maxWidth = '90%';
    img.style.maxHeight = '90%';
    img.style.objectFit = 'contain';
    img.style.borderRadius = '8px';
    
    modal.appendChild(img);
    modal.onclick = function() {
        document.body.removeChild(modal);
    };
    
    document.body.appendChild(modal);
}
</script>
EOF

