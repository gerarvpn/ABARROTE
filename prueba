# Crear script para obtener detalles de tarea
cat > obtener_detalles_tarea.php << 'EOF'
<?php
require_once 'config.php';
session_start();

if (!isset($_SESSION['usuario_id'])) {
    echo '<div class="text-red-400">No autenticado</div>';
    exit;
}

$tarea_id = $_GET['id'] ?? 0;

try {
    if ($_SESSION['rol'] === 'empleado') {
        $stmt = $pdo->prepare("
            SELECT t.*, u.nombre as admin_nombre 
            FROM tareas t 
            LEFT JOIN usuarios u ON t.administrador_id = u.id 
            WHERE t.id = ? AND t.empleado_id = ?
        ");
        $stmt->execute([$tarea_id, $_SESSION['usuario_id']]);
    } else {
        $stmt = $pdo->prepare("
            SELECT t.*, u.nombre as empleado_nombre, u2.nombre as admin_nombre 
            FROM tareas t 
            LEFT JOIN usuarios u ON t.empleado_id = u.id 
            LEFT JOIN usuarios u2 ON t.administrador_id = u2.id 
            WHERE t.id = ?
        ");
        $stmt->execute([$tarea_id]);
    }
    
    $tarea = $stmt->fetch();
    
    if ($tarea) {
        echo '<div class="space-y-4">';
        echo '<div class="grid grid-cols-1 md:grid-cols-2 gap-4">';
        
        echo '<div class="p-4 input-glass rounded-xl">';
        echo '<h4 class="font-semibold text-white mb-2">Informaci√≥n General</h4>';
        echo '<p class="text-gray-300"><strong>T√≠tulo:</strong> ' . htmlspecialchars($tarea['titulo']) . '</p>';
        echo '<p class="text-gray-300"><strong>Estado:</strong> <span class="px-2 py-1 rounded-full text-xs ' . 
             ($tarea['estado'] === 'pendiente' ? 'bg-yellow-500' : 
              ($tarea['estado'] === 'completada' ? 'bg-green-500' : 
              ($tarea['estado'] === 'vencida' ? 'bg-red-500' : 'bg-blue-500'))) . 
             ' text-white">' . ucfirst($tarea['estado']) . '</span></p>';
        
        if ($_SESSION['rol'] !== 'empleado') {
            echo '<p class="text-gray-300"><strong>Empleado:</strong> ' . htmlspecialchars($tarea['empleado_nombre']) . '</p>';
        }
        
        echo '<p class="text-gray-300"><strong>Asignada por:</strong> ' . htmlspecialchars($tarea['admin_nombre']) . '</p>';
        echo '</div>';
        
        echo '<div class="p-4 input-glass rounded-xl">';
        echo '<h4 class="font-semibold text-white mb-2">Fechas</h4>';
        echo '<p class="text-gray-300"><strong>Asignada:</strong> ' . convertirFechaZonaHoraria($tarea['fecha_asignacion'], 'd/m/Y H:i') . '</p>';
        
        if ($tarea['fecha_vencimiento']) {
            echo '<p class="text-gray-300"><strong>Vence:</strong> ' . convertirFechaZonaHoraria($tarea['fecha_vencimiento'], 'd/m/Y H:i') . '</p>';
        }
        
        if ($tarea['fecha_completado']) {
            echo '<p class="text-gray-300"><strong>Completada:</strong> ' . convertirFechaZonaHoraria($tarea['fecha_completado'], 'd/m/Y H:i') . '</p>';
        }
        echo '</div>';
        echo '</div>';
        
        echo '<div class="p-4 input-glass rounded-xl">';
        echo '<h4 class="font-semibold text-white mb-2">Descripci√≥n</h4>';
        echo '<p class="text-gray-300">' . nl2br(htmlspecialchars($tarea['descripcion'])) . '</p>';
        echo '</div>';
        
        if ($tarea['calificacion']) {
            echo '<div class="p-4 input-glass rounded-xl">';
            echo '<h4 class="font-semibold text-white mb-2">Calificaci√≥n</h4>';
            echo '<p class="text-yellow-400 text-lg">' . str_repeat('‚òÖ', $tarea['calificacion']) . '</p>';
            if ($tarea['comentario_revision']) {
                echo '<p class="text-gray-300 mt-2"><strong>Comentario:</strong> ' . htmlspecialchars($tarea['comentario_revision']) . '</p>';
            }
            echo '</div>';
        }
        
        echo '</div>';
    } else {
        echo '<div class="text-red-400">Tarea no encontrada</div>';
    }
} catch(Exception $e) {
    echo '<div class="text-red-400">Error al cargar detalles: ' . $e->getMessage() . '</div>';
}
?>
EOF

# Crear script para editar tarea
cat > editar_tarea.php << 'EOF'
<?php
require_once 'config.php';
session_start();

if (!isset($_SESSION['usuario_id']) || !in_array($_SESSION['rol'], ['admin_pro', 'admin'])) {
    header('Content-Type: application/json');
    echo json_encode(['success' => false, 'error' => 'No autorizado']);
    exit;
}

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $tarea_id = $_POST['tarea_id'] ?? '';
    $titulo = $_POST['titulo'] ?? '';
    $descripcion = $_POST['descripcion'] ?? '';
    $fecha_vencimiento = $_POST['fecha_vencimiento'] ?? '';
    $requiere_foto = isset($_POST['requiere_foto']) ? 1 : 0;
    
    try {
        $resultado = editar_tarea($tarea_id, $titulo, $descripcion, $fecha_vencimiento, $requiere_foto);
        
