                    <script>
                        // Variables globales para la c√°mara
                        let stream = null;
                        let fotosCapturadas = [];
                        let requiereFoto = false;
                        let currentCamera = 'environment'; // 'environment' para c√°mara trasera, 'user' para frontal
                        let zoomLevel = 1;
                        let flashOn = false;
                        
                        // Navegaci√≥n entre pesta√±as
                        function mostrarTab(tabId) {
                            // Ocultar todas las pesta√±as
                            document.querySelectorAll('.tab-content').forEach(tab => {
                                tab.classList.remove('active');
                            });
                            
                            // Mostrar la pesta√±a seleccionada
                            document.getElementById(tabId).classList.add('active');
                            
                            // Actualizar t√≠tulo de la p√°gina
                            const titulos = {
                                'dashboard': 'Dashboard Principal',
                                'gestion-usuarios': 'Gesti√≥n de Usuarios',
                                'asignar-tareas': 'Asignar Tareas',
                                'ver-tareas': 'Todas las Tareas',
                                'montacarga': 'Montacarga',
                                'mis-tareas': 'Mis Tareas',
                                'mi-perfil': 'Mi Perfil',
                                'configuracion': 'Configuraci√≥n'
                            };
                            
                            document.getElementById('page-title').textContent = titulos[tabId] || 'Dashboard Principal';
                            
                            // Actualizar estado activo en el men√∫
                            document.querySelectorAll('.ios-nav-item').forEach(item => {
                                item.classList.remove('active');
                            });
                            document.querySelector(`a[onclick="mostrarTab('${tabId}')"]`).classList.add('active');
                            
                            // Cerrar men√∫ en m√≥vil
                            cerrarMenuMovil();
                            
                            // Actualizar URL sin recargar la p√°gina
                            history.pushState(null, '', `?tab=${tabId}`);
                            
                            // Actualizar datos en tiempo real si es necesario
                            if (tabId === 'mis-tareas' || tabId === 'ver-tareas') {
                                actualizarTareasEnTiempoReal();
                            }
                        }
                        
                        // Toggle sidebar en m√≥vil
                        function toggleSidebar() {
                            const sidebar = document.getElementById('sidebar');
                            const overlay = document.getElementById('sidebar-overlay');
                            
                            if (sidebar.classList.contains('-translate-x-full')) {
                                // Abrir
                                sidebar.classList.remove('-translate-x-full');
                                sidebar.classList.add('translate-x-0');
                                overlay.classList.remove('opacity-0', 'pointer-events-none');
                                overlay.classList.add('opacity-50', 'pointer-events-auto');
                            } else {
                                // Cerrar
                                sidebar.classList.remove('translate-x-0');
                                sidebar.classList.add('-translate-x-full');
                                overlay.classList.remove('opacity-50', 'pointer-events-auto');
                                overlay.classList.add('opacity-0', 'pointer-events-none');
                            }
                        }
                        
                        // Cerrar men√∫ en m√≥vil
                        function cerrarMenuMovil() {
                            if (window.innerWidth <= 1024) {
                                const sidebar = document.getElementById('sidebar');
                                const overlay = document.getElementById('sidebar-overlay');
                                
                                sidebar.classList.remove('translate-x-0');
                                sidebar.classList.add('-translate-x-full');
                                overlay.classList.remove('opacity-50', 'pointer-events-auto');
                                overlay.classList.add('opacity-0', 'pointer-events-none');
                            }
                        }
                        
                        // Completar tarea con c√°mara MEJORADO
                        function completarTarea(tareaId, necesitaFoto = false) {
                            document.getElementById('tarea_id_completar').value = tareaId;
                            requiereFoto = necesitaFoto;
                            fotosCapturadas = [];
                            
                            if (necesitaFoto) {
                                document.getElementById('modalCompletarTarea').style.display = 'flex';
                                iniciarCamara();
                            } else {
                                // Si no requiere foto, completar directamente
                                if (confirm('¬øEst√°s seguro de que quieres marcar esta tarea como completada?')) {
                                    document.getElementById('fotos_data').value = JSON.stringify([]);
                                    document.getElementById('formCompletarTarea').submit();
                                }
                            }
                        }
                        
                        // Iniciar c√°mara - MEJORADO CON SOPORTE PARA M√öLTIPLES NAVEGADORES
                        async function iniciarCamara() {
                            try {
                                // Verificar si el navegador soporta la API de medios
                                if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
                                    // Intentar m√©todos alternativos para navegadores m√°s antiguos
                                    navigator.getUserMedia = navigator.getUserMedia || navigator.webkitGetUserMedia || navigator.mozGetUserMedia;
                                    
                                    if (!navigator.getUserMedia) {
                                        mostrarErrorCamara('La c√°mara no es compatible con este navegador. Por favor, use Chrome, Firefox o Safari.');
                                        return;
                                    }
                                }
                                
                                document.getElementById('camera-status').textContent = 'Solicitando acceso a la c√°mara...';
                                
                                const constraints = {
                                    video: {
                                        facingMode: currentCamera,
                                        width: { ideal: 1920 },
                                        height: { ideal: 1080 },
                                        zoom: { min: 1, max: 3 }
                                    },
                                    audio: false
                                };
                                
                                // Intentar con la API moderna primero
                                if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
                                    stream = await navigator.mediaDevices.getUserMedia(constraints);
                                } else {
                                    // Fallback para navegadores antiguos
                                    stream = await new Promise((resolve, reject) => {
                                        navigator.getUserMedia(constraints, resolve, reject);
                                    });
                                }
                                
                                const video = document.getElementById('video');
                                video.srcObject = stream;
                                
                                // Mostrar vista de c√°mara
                                document.getElementById('camera-view').style.display = 'block';
                                document.getElementById('photo-gallery').style.display = 'none';
                                document.getElementById('btn-completar').style.display = 'none';
                                document.getElementById('camera-status').textContent = 'C√°mara lista - Apunte y capture';
                                
                                // Limpiar fotos anteriores
                                fotosCapturadas = [];
                                actualizarGaleria();
                                
                            } catch (err) {
                                console.error('Error c√°mara:', err);
                                mostrarErrorCamara('Error al acceder a la c√°mara: ' + err.message);
                            }
                        }
                        
                        function mostrarErrorCamara(mensaje) {
                            document.getElementById('camera-status').textContent = mensaje;
                            document.getElementById('camera-status').classList.add('text-red-400');
                            
                            // Mostrar opci√≥n para completar sin foto
                            const btnCompletar = document.getElementById('btn-completar');
                            btnCompletar.style.display = 'block';
                            btnCompletar.innerHTML = '<i class="fas fa-check mr-2"></i> Completar sin Foto';
                            btnCompletar.onclick = function() {
                                document.getElementById('fotos_data').value = JSON.stringify([]);
                                document.getElementById('formCompletarTarea').submit();
                            };
                        }
                        
                        // Capturar foto
                        function capturarFoto() {
                            const video = document.getElementById('video');
                            const canvas = document.createElement('canvas');
                            const context = canvas.getContext('2d');
                            
                            canvas.width = video.videoWidth;
                            canvas.height = video.videoHeight;
                            
                            // Aplicar zoom si es necesario
                            context.save();
                            context.translate(canvas.width / 2, canvas.height / 2);
                            context.scale(zoomLevel, zoomLevel);
                            context.translate(-canvas.width / 2, -canvas.height / 2);
                            
                            context.drawImage(video, 0, 0, canvas.width, canvas.height);
                            context.restore();
                            
                            // Convertir a data URL
                            const photoData = canvas.toDataURL('image/jpeg', 0.9);
                            
                            // Agregar a la lista de fotos
                            fotosCapturadas.push(photoData);
                            
                            // Actualizar galer√≠a
                            actualizarGaleria();
                            
                            // Mostrar galer√≠a si hay fotos
                            if (fotosCapturadas.length > 0) {
                                document.getElementById('camera-view').style.display = 'none';
                                document.getElementById('photo-gallery').style.display = 'block';
                                document.getElementById('btn-completar').style.display = 'block';
                            }
                            
                            // Actualizar el campo hidden con todas las fotos
                            document.getElementById('fotos_data').value = JSON.stringify(fotosCapturadas);
                            
                            // Mostrar mensaje de √©xito
                            mostrarMensajeTemporal('Foto capturada exitosamente', 'success');
                        }
                        
                        // Actualizar galer√≠a de fotos
                        function actualizarGaleria() {
                            const container = document.getElementById('photos-container');
                            container.innerHTML = '';
                            
                            fotosCapturadas.forEach((foto, index) => {
                                const div = document.createElement('div');
                                div.className = 'photo-item';
                                
                                const img = document.createElement('img');
                                img.src = foto;
                                img.alt = `Foto ${index + 1}`;
                                
                                const removeBtn = document.createElement('div');
                                removeBtn.className = 'photo-remove';
                                removeBtn.innerHTML = '<i class="fas fa-times"></i>';
                                removeBtn.onclick = () => eliminarFoto(index);
                                
                                div.appendChild(img);
                                div.appendChild(removeBtn);
                                container.appendChild(div);
                            });
                        }
                        
                        // Eliminar foto
                        function eliminarFoto(index) {
                            fotosCapturadas.splice(index, 1);
                            actualizarGaleria();
                            document.getElementById('fotos_data').value = JSON.stringify(fotosCapturadas);
                            
                            // Si no hay fotos, volver a la c√°mara
                            if (fotosCapturadas.length === 0) {
                                volverACamara();
                            }
                        }
                        
                        // Reiniciar c√°mara
                        function reiniciarCamara() {
                            if (stream) {
                                stream.getTracks().forEach(track => track.stop());
                            }
                            iniciarCamara();
                        }
                        
                        // Volver a c√°mara
                        function volverACamara() {
                            document.getElementById('camera-view').style.display = 'block';
                            document.getElementById('photo-gallery').style.display = 'none';
                            document.getElementById('btn-completar').style.display = 'none';
                            reiniciarCamara();
                        }
                        
                        // Cambiar entre c√°maras frontal/trasera
                        function toggleCamera() {
                            currentCamera = currentCamera === 'environment' ? 'user' : 'environment';
                            reiniciarCamara();
                        }
                        
                        // Zoom in
                        function zoomIn() {
                            if (zoomLevel < 3) {
                                zoomLevel += 0.5;
                                aplicarZoom();
                            }
                        }
                        
                        // Zoom out
                        function zoomOut() {
                            if (zoomLevel > 1) {
                                zoomLevel -= 0.5;
                                aplicarZoom();
                            }
                        }
                        
                        // Aplicar zoom al video
                        function aplicarZoom() {
                            const video = document.getElementById('video');
                            video.style.transform = `scale(${zoomLevel})`;
                            video.style.transformOrigin = 'center center';
                        }
                        
                        // Toggle flash (simulado)
                        function toggleFlash() {
                            flashOn = !flashOn;
                            const flashBtn = document.querySelector('.zoom-btn:nth-child(3)');
                            if (flashOn) {
                                flashBtn.classList.add('bg-yellow-500', 'text-black');
                                flashBtn.classList.remove('bg-black/50', 'text-white');
                            } else {
                                flashBtn.classList.remove('bg-yellow-500', 'text-black');
                                flashBtn.classList.add('bg-black/50', 'text-white');
                            }
                        }
                        
                        // Mostrar mensaje temporal
                        function mostrarMensajeTemporal(mensaje, tipo) {
                            const div = document.createElement('div');
                            div.className = `fixed top-4 right-4 p-4 rounded-lg z-50 ${tipo === 'success' ? 'bg-green-500' : 'bg-red-500'} text-white`;
                            div.textContent = mensaje;
                            document.body.appendChild(div);
                            
                            setTimeout(() => {
                                div.remove();
                            }, 3000);
                        }
                        
                        // Verificar tarea
                        function verificarTarea(tareaId) {
                            document.getElementById('tarea_id_verificar').value = tareaId;
                            document.getElementById('modalVerificarTarea').style.display = 'flex';
                        }
                        
                        // Ver detalles de tarea
                        async function verDetallesTarea(tareaId) {
                            try {
                                const response = await fetch(`obtener_detalles_tarea.php?id=${tareaId}`);
                                const detalles = await response.text();
                                document.getElementById('detalles-tarea-content').innerHTML = detalles;
                                document.getElementById('modalDetallesTarea').style.display = 'flex';
                            } catch (error) {
                                mostrarMensajeTemporal('Error al cargar detalles de la tarea', 'error');
                                console.error('Error:', error);
                            }
                        }
                        
                        // Editar tarea
                        async function editarTarea(tareaId) {
                            try {
                                const response = await fetch(`obtener_datos_tarea.php?id=${tareaId}`);
                                const tarea = await response.json();
                                
                                if (tarea.error) {
                                    mostrarMensajeTemporal(tarea.error, 'error');
                                    return;
                                }
                                
                                document.getElementById('tarea_id_editar').value = tarea.id;
                                document.getElementById('editar_titulo').value = tarea.titulo;
                                document.getElementById('editar_descripcion').value = tarea.descripcion;
                                document.getElementById('editar_fecha_vencimiento').value = tarea.fecha_vencimiento_local;
                                document.getElementById('editar_requiere_foto').checked = tarea.requiere_foto == 1;
                                document.getElementById('editar_notificar_telegram').checked = tarea.notificar_telegram == 1;
                                
                                document.getElementById('modalEditarTarea').style.display = 'flex';
                            } catch (error) {
                                mostrarMensajeTemporal('Error al cargar datos de la tarea', 'error');
                                console.error('Error:', error);
                            }
                        }
                        
                        // Editar usuario
                        async function editarUsuario(userId) {
                            try {
                                const response = await fetch(`obtener_datos_usuario.php?id=${userId}`);
                                const usuario = await response.json();
                                
                                if (usuario.error) {
                                    alert(usuario.error);
                                    return;
                                }
                                
                                document.getElementById('user_id_editar').value = usuario.id;
                                document.getElementById('editar_nombre').value = usuario.nombre;
                                document.getElementById('editar_rol').value = usuario.rol;
                                document.getElementById('editar_telegram_id').value = usuario.telegram_id || '';
                                document.getElementById('editar_turno').value = usuario.turno || 'AM';
                                document.getElementById('editar_pasillo').value = usuario.pasillo_asignado || '';
                                document.getElementById('editar_dia_libre').value = usuario.dia_libre || '';
                                
                                // Mostrar/ocultar campos seg√∫n el rol
                                toggleCamposEdicion();
                                
                                document.getElementById('modalEditarUsuario').style.display = 'flex';
                            } catch (error) {
                                alert('Error al cargar datos del usuario');
                                console.error('Error:', error);
                            }
                        }
                        
                        // Eliminar usuario
                        function eliminarUsuario(userId) {
                            if (confirm('¬øEst√° seguro de que desea eliminar este usuario? Esta acci√≥n no se puede deshacer.')) {
                                const form = document.createElement('form');
                                form.method = 'POST';
                                form.innerHTML = `
                                    <input type="hidden" name="accion" value="eliminar_usuario">
                                    <input type="hidden" name="user_id" value="${userId}">
                                    <input type="hidden" name="tab_actual" value="gestion-usuarios">
                                    <input type="hidden" name="form_token" value="<?php echo $_SESSION['form_token']; ?>">
                                `;
                                document.body.appendChild(form);
                                form.submit();
                            }
                        }
                        
                        // Descargar backup
                        async function descargarBackup(nombreArchivo) {
                            try {
                                const response = await fetch(`descargar_backup.php?file=${encodeURIComponent(nombreArchivo)}`);
                                const resultado = await response.json();
                                
                                if (resultado.success) {
                                    // Crear enlace de descarga y simular click
                                    const link = document.createElement('a');
                                    link.href = resultado.url_descarga;
                                    link.download = resultado.nombre;
                                    document.body.appendChild(link);
                                    link.click();
                                    document.body.removeChild(link);
                                    
                                    cerrarModal('modalBackup');
                                } else {
                                    alert('Error al descargar: ' + resultado.error);
                                }
                            } catch (error) {
                                alert('Error al procesar la descarga');
                                console.error('Error:', error);
                            }
                        }
                        
                        // Mostrar instrucciones de montacarga
                        function mostrarInstruccionesMontacarga() {
                            alert('INSTRUCCIONES MONTACARGA:\n\n' +
                                  'POSICI√ìN SUPERIOR (ARRIBA):\n' +
                                  '- Quedarse en la posici√≥n superior del montacarga\n' +
                                  '- Enviar patanas a los compa√±eros del almac√©n\n' +
                                  '- Coordinar el movimiento del montacarga\n\n' +
                                  'POSICI√ìN INFERIOR (ALMAC√âN):\n' +
                                  '- Trabajar en el almac√©n para recibir patanas\n' +
                                  '- Organizar y distribuir las patanas recibidas\n' +
                                  '- Comunicarse con los compa√±eros del montacarga');
                        }
                        
                        // Cerrar modal
                        function cerrarModal(modalId) {
                            document.getElementById(modalId).style.display = 'none';
                            
                            // Detener c√°mara si est√° activa
                            if (stream) {
                                stream.getTracks().forEach(track => track.stop());
                                stream = null;
                            }
                            
                            // Resetear variables de c√°mara
                            fotosCapturadas = [];
                            zoomLevel = 1;
                            flashOn = false;
                        }
                        
                        // Cerrar modal al hacer clic fuera
                        window.onclick = function(event) {
                            document.querySelectorAll('.modal').forEach(modal => {
                                if (event.target === modal) {
                                    cerrarModal(modal.id);
                                }
                            });
                        }
                        
                        // Animaci√≥n de estad√≠sticas al cargar
                        function animateStats() {
                            const stats = document.querySelectorAll('.liquid-card .text-4xl');
                            stats.forEach(stat => {
                                const finalValue = parseInt(stat.textContent);
                                let currentValue = 0;
                                const duration = 1500;
                                const increment = finalValue / (duration / 16);
                                
                                const timer = setInterval(() => {
                                    currentValue += increment;
                                    if (currentValue >= finalValue) {
                                        stat.textContent = finalValue.toLocaleString();
                                        clearInterval(timer);
                                    } else {
                                        stat.textContent = Math.floor(currentValue).toLocaleString();
                                    }
                                }, 16);
                            });
                        }
                        
                        // Sistema de calificaci√≥n con estrellas
                        function initRatingStars() {
                            const stars = document.querySelectorAll('.rating-star');
                            const ratingInput = document.getElementById('calificacion');
                            
                            stars.forEach(star => {
                                star.addEventListener('click', function() {
                                    const value = this.getAttribute('data-value');
                                    ratingInput.value = value;
                                    
                                    stars.forEach(s => {
                                        if (s.getAttribute('data-value') <= value) {
                                            s.classList.add('active');
                                        } else {
                                            s.classList.remove('active');
                                        }
                                    });
                                });
                            });
                        }
                        
                        // Toggle campos de empleado al crear usuario
                        function toggleCamposEmpleado() {
                            const rol = document.querySelector('select[name="rol"]').value;
                            const campos = document.querySelectorAll('.campos-empleado');
                            
                            campos.forEach(campo => {
                                campo.style.display = rol === 'empleado' ? 'block' : 'none';
                            });
                        }
                        
                        // Toggle campos de empleado al editar usuario
                        function toggleCamposEdicion() {
                            const rol = document.getElementById('editar_rol').value;
                            const campos = document.querySelectorAll('.campos-edicion');
                            
                            campos.forEach(campo => {
                                campo.style.display = rol === 'empleado' ? 'block' : 'none';
                            });
                        }
                        
                        // Filtrar tareas por estado
                        function filtrarTareas(estado) {
                            const filas = document.querySelectorAll('#tabla-tareas .fila-tarea');
                            filas.forEach(fila => {
                                if (estado === 'todas' || fila.getAttribute('data-estado') === estado) {
                                    fila.style.display = '';
                                } else {
                                    fila.style.display = 'none';
                                }
                            });
                        }
                        
                        // Filtrar mis tareas por estado
                        function filtrarMisTareas(estado) {
                            const filas = document.querySelectorAll('#tabla-mis-tareas .fila-mi-tarea');
                            filas.forEach(fila => {
                                if (estado === 'todas' || fila.getAttribute('data-estado') === estado) {
                                    fila.style.display = '';
                                } else {
                                    fila.style.display = 'none';
                                }
                            });
                        }
                        
                        // Actualizar tareas en tiempo real
                        async function actualizarTareasEnTiempoReal() {
                            try {
                                const response = await fetch('obtener_tareas_actualizadas.php');
                                const data = await response.json();
                                
                                if (data.error) {
                                    console.error('Error actualizando tareas:', data.error);
                                    return;
                                }
                                
                                // Aqu√≠ puedes implementar la l√≥gica para actualizar la interfaz
                                // con los datos recibidos en data.tareas y data.estadisticas
                                console.log('Tareas actualizadas:', data);
                                
                            } catch (error) {
                                console.error('Error en actualizaci√≥n en tiempo real:', error);
                            }
                        }
                        
                        // Inicializar al cargar la p√°gina
                        document.addEventListener('DOMContentLoaded', function() {
                            animateStats();
                            initRatingStars();
                            toggleCamposEmpleado();
                            
                            // Mostrar bot√≥n de confirmaci√≥n al seleccionar archivo de backup
                            const backupFileInput = document.getElementById('backup-file');
                            const submitBackupBtn = document.getElementById('submit-backup');
                            
                            if (backupFileInput && submitBackupBtn) {
                                backupFileInput.addEventListener('change', function() {
                                    if (this.files.length > 0) {
                                        submitBackupBtn.style.display = 'inline-block';
                                    } else {
                                        submitBackupBtn.style.display = 'none';
                                    }
                                });
                            }
                            
                            // Cerrar mensajes autom√°ticamente despu√©s de 5 segundos
                            setTimeout(() => {
                                const mensajes = document.querySelectorAll('.liquid-card.bg-red-900\\/30, .liquid-card.bg-green-900\\/30, .liquid-card.bg-yellow-900\\/30');
                                mensajes.forEach(msg => {
                                    msg.style.display = 'none';
                                });
                            }, 5000);
                            
                            // Inicializar estado activo del men√∫ seg√∫n la pesta√±a actual
                            const currentTab = '<?php echo $tab_actual; ?>';
                            if (currentTab) {
                                const navItem = document.querySelector(`a[onclick="mostrarTab('${currentTab}')"]`);
                                if (navItem) {
                                    navItem.classList.add('active');
                                }
                            }
                            
                            // Configurar actualizaci√≥n autom√°tica cada 30 segundos
                            setInterval(actualizarTareasEnTiempoReal, 30000);
                            
                            // Configurar actualizaci√≥n autom√°tica de tareas vencidas cada minuto
                            setInterval(() => {
                                fetch('tareas_automaticas.php')
                                    .then(response => response.text())
                                    .then(data => console.log('Tareas autom√°ticas ejecutadas'))
                                    .catch(error => console.error('Error ejecutando tareas autom√°ticas:', error));
                            }, 60000);
                        });
                        
                        // Manejar navegaci√≥n hacia atr√°s/adelante
                        window.addEventListener('popstate', function() {
                            const urlParams = new URLSearchParams(window.location.search);
                            const tab = urlParams.get('tab') || 'dashboard';
                            mostrarTab(tab);
                        });
                    </script>
                </body>
                </html>
EOF

# Configurar permisos
print_message "Configurando permisos..."
mkdir -p /var/www/backups
mkdir -p /var/www/uploads/tareas
chown -R www-data:www-data $PANEL_DIR
chown -R www-data:www-data /var/www/backups
chown -R www-data:www-data /var/www/uploads
chmod -R 755 $PANEL_DIR
chmod -R 755 /var/www/backups
chmod -R 755 /var/www/uploads

# Configurar Apache
print_message "Configurando Apache..."
cat > /etc/apache2/sites-available/gestion-empleados.conf << EOF
<VirtualHost *:80>
    ServerName $DOMAIN
    DocumentRoot $PANEL_DIR
    
    <Directory $PANEL_DIR>
        Options -Indexes +FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    
    ErrorLog \${APACHE_LOG_DIR}/gestion_empleados_error.log
    CustomLog \${APACHE_LOG_DIR}/gestion_empleados_access.log combined
</VirtualHost>
EOF

a2ensite gestion-empleados.conf
a2dissite 000-default.conf
a2enmod rewrite

# Configurar SSL con m√©todo mejorado
if [ ! -z "$DOMAIN" ] && [ "$DOMAIN" != "localhost" ]; then
    print_message "Configurando dominio: $DOMAIN"
    mysql gestion_empleados -e "UPDATE configuraciones SET valor='$DOMAIN' WHERE clave='dominio'"
    
    read -p "¬øConfigurar SSL con Certbot? (s/n): " setup_ssl
    if [[ $setup_ssl == "s" || $setup_ssl == "S" ]]; then
        print_message "Instalando Certbot..."
        apt install -y certbot python3-certbot-apache
        
        # M√©todo mejorado para certificados SSL
        print_message "Obteniendo certificado SSL..."
        
        # Detener Apache temporalmente para liberar puerto 80
        systemctl stop apache2
        
        # Intentar obtener certificado
        if certbot certonly --standalone -d $DOMAIN --non-interactive --agree-tos --email admin@$DOMAIN 2>/dev/null; then
            print_success "Certificado SSL obtenido exitosamente"
            
            # Configurar Apache con SSL
            cat > /etc/apache2/sites-available/gestion-empleados-ssl.conf << EOF
<VirtualHost *:443>
    ServerName $DOMAIN
    DocumentRoot $PANEL_DIR
    
    SSLEngine on
    SSLCertificateFile /etc/letsencrypt/live/$DOMAIN/fullchain.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/$DOMAIN/privkey.pem
    
    <Directory $PANEL_DIR>
        Options -Indexes +FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    
    ErrorLog \${APACHE_LOG_DIR}/gestion_empleados_ssl_error.log
    CustomLog \${APACHE_LOG_DIR}/gestion_empleados_ssl_access.log combined
</VirtualHost>

<VirtualHost *:80>
    ServerName $DOMAIN
    Redirect permanent / https://$DOMAIN/
</VirtualHost>
EOF
            a2ensite gestion-empleados-ssl.conf
            a2dissite gestion-empleados.conf
            a2enmod ssl
            
            print_success "Configuraci√≥n SSL completada"
        else
            print_warning "No se pudo obtener certificado SSL autom√°ticamente"
            print_info "Puede configurar SSL manualmente m√°s tarde"
            # Reactivar configuraci√≥n sin SSL
            a2ensite gestion-empleados.conf
        fi
        
        # Reiniciar Apache
        systemctl start apache2
    fi
fi

# Configurar cron jobs MEJORADOS
print_message "Configurando tareas autom√°ticas y backups..."
(crontab -l 2>/dev/null | grep -v "$PANEL_DIR/tareas_automaticas.php" | grep -v "$PANEL_DIR/backup_automatico.php"; 
echo "*/5 * * * * /usr/bin/php $PANEL_DIR/tareas_automaticas.php >> /var/log/tareas_automaticas.log 2>&1";
echo "0 2 * * * /usr/bin/php $PANEL_DIR/backup_automatico.php >> /var/log/backup_automatico.log 2>&1") | crontab -

# Configurar Telegram si se proporcion√≥ - CON PRUEBA DE CONEXI√ìN
if [ ! -z "$TELEGRAM_TOKEN" ]; then
    print_message "Configurando bot de Telegram..."
    mysql gestion_empleados -e "UPDATE configuraciones SET valor='$TELEGRAM_TOKEN' WHERE clave='telegram_token'"
    
    if [ ! -z "$TELEGRAM_CHAT_ID" ]; then
        mysql gestion_empleados -e "UPDATE configuraciones SET valor='$TELEGRAM_CHAT_ID' WHERE clave='telegram_chat_id'"
        
        # Probar conexi√≥n con Telegram
        print_message "Probando conexi√≥n con Telegram..."
        PHP_TEST_SCRIPT="<?php
        require_once 'config.php';
        \$resultado = probar_telegram_bot('$TELEGRAM_TOKEN', '$TELEGRAM_CHAT_ID');
        if (\$resultado['success']) {
            echo 'SUCCESS: ' . \$resultado['message'];
        } else {
            echo 'ERROR: ' . \$resultado['error'];
        }
        ?>"
        
        echo "$PHP_TEST_SCRIPT" | php > /tmp/telegram_test.txt
        TEST_RESULT=$(cat /tmp/telegram_test.txt)
        
        if [[ $TEST_RESULT == SUCCESS* ]]; then
            print_success "Conexi√≥n con Telegram exitosa: $TEST_RESULT"
        else
            print_warning "Problema con Telegram: $TEST_RESULT"
            print_info "Revise el token y chat ID proporcionados"
        fi
        rm /tmp/telegram_test.txt
    fi
fi

# Crear administrador pro personalizado
if [ ! -z "$ADMIN_USER" ] && [ ! -z "$ADMIN_PASS" ]; then
    print_message "Creando administrador pro personalizado..."
    ADMIN_PASS_HASH=$(php -r "echo password_hash('$ADMIN_PASS', PASSWORD_DEFAULT);")
    mysql gestion_empleados -e "INSERT IGNORE INTO usuarios (username, password, nombre, rol, activo) VALUES ('$ADMIN_USER', '$ADMIN_PASS_HASH', 'Administrador Pro', 'admin_pro', TRUE)"
fi

# Reiniciar servicios
print_message "Reiniciando servicios..."
systemctl restart apache2
systemctl enable apache2

# Configurar firewall
ufw allow 80
ufw allow 443
ufw allow 22

print_success "‚úÖ Instalaci√≥n v1.5.0 completada exitosamente!"
echo ""
print_message "=== INFORMACI√ìN DEL SISTEMA ==="
echo "üåê URL del panel: http://$DOMAIN"
if [ -f /etc/letsencrypt/live/$DOMAIN/fullchain.pem ]; then
    echo "üîí SSL configurado: S√≠ (https://$DOMAIN)"
else
    echo "üîí SSL configurado: No"
fi
echo "üë§ Usuario administrador: $ADMIN_USER"
echo "üìÅ Directorio del panel: $PANEL_DIR"
echo "üóÑÔ∏è Base de datos: gestion_empleados"
echo "üîß Usuario BD: gestion_user"
echo "ü§ñ Telegram configurado: $( [ ! -z "$TELEGRAM_TOKEN" ] && echo "S√≠" || echo "No" )"
echo "‚è∞ Zona horaria: America/Santo_Domingo"
echo "üöú Montacarga autom√°tico: AM $( [ ! -z "$configuraciones" ] && echo "$hora_montacarga_am" || echo "08:00" ), PM $( [ ! -z "$configuraciones" ] && echo "$hora_montacarga_pm" || echo "14:00" )"
echo "üíæ Backup autom√°tico: 02:00"
echo "üîÑ Tareas autom√°ticas: Cada 5 minutos"
echo "üì∏ M√°ximo fotos por tarea: 5"
echo "üé® Estilo: iOS 26 Liquid Glass mejorado"
echo "üõ°Ô∏è Prevenci√≥n de recargas: Activada con tokens"
echo "üë• Asignaci√≥n m√∫ltiple: S√≠"
echo "üîí Privacidad entre administradores: S√≠"
echo "‚úÖ Tareas vencidas: ¬°AHORA S√ç FUNCIONAN!"
echo "üì± C√°mara mejorada: Soporte para m√∫ltiples navegadores"
echo "üîß Versi√≥n: 1.5.0"
echo ""
print_warning "üîí Guarde esta informaci√≥n en un lugar seguro"
print_message "üöÄ El sistema v1.5.0 completamente corregido est√° listo para usar!"

# Hacer el script ejecutable
chmod +x instalacion_panel_v1.5.0.sh

print_success "‚úÖ Script de instalaci√≥n v1.5.0 completamente corregido creado exitosamente!"
print_info "üìã Para instalar el sistema ejecute: sudo ./instalacion_panel_v1.5.0.sh"